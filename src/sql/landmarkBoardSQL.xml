<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="landmarkBoard">
	<!-- 시퀀스는 대문자로 써야 들어가진다 -->
	<insert id="insertLand" parameterType="LandmarkBoardDTO">
		insert into LANDMARKBOARD(lNo,writer,lName,lType,addr,xLoc,yLoc,lCont,lOpen,reg) values(LANDMARKBOARD_SEQ.nextVal,#{writer},#{lName},#{lType},#{addr},#{xLoc},#{yLoc},#{lCont},#{lOpen},sysdate)
	</insert>
	
	<select id="getLands" resultType="LandmarkBoardDTO">
		select * from LANDMARKBOARD
	</select>
	
	<select id="getLand" resultType="LandmarkBoardDTO">
		select * from LANDMARKBOARD where lNo=#{lNo}
	</select>
	
	<select id="myLand" parameterType="string" resultType="LandmarkBoardDTO">
		select * from LANDMARKBOARD where writer=#{id}
	</select> 
</mapper>